@model HomeViewModel

@{
    ViewData["Title"] = "Top Locations";
}

<div class="container mt-4">
    <h1>Top Locations</h1>
    <div class="row">
        @foreach (var location in Model.TopLocations)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@location.LocationImageUrl" class="card-img-top img-fluid img-height" alt="@location.LocationName" />
                    <div class="card-body">
                        <h4 class="card-title">
                            <a class="text-decoration-none" asp-controller="Location" asp-action="Details" asp-route-id="@location.LocationId">@location.LocationName</a>
                        </h4>
                        <p class="card-text">Price to visit: <strong>@location.PriceToVisit.ToString("c")</strong></p>
                        <p class="card-text">Category: <strong>@location.Category.CategoryName</strong></p>
                        @if (location.TopLocation)
                        {
                            <div class="star-icon">
                                <p class="star-icon">★</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>