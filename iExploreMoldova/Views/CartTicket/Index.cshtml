@model TicketsListViewModel

<h1 class="mt-4">Your tickets</h1>

@if (Model.CartTicket != null && Model.CartTicket.CartList.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var ticket in Model.CartTicket.CartList)
        {
            <div class="col mb-4">
                <div class="card h-100">
                    <img src="@ticket.Location.LocationImageUrl" class="card-img-top img-fluid" alt="@ticket.Location.LocationName">
                    <div class="card-body">
                        <h5 class="card-title">@ticket.Location.LocationName</h5>
                        <p class="card-text">Amount: @ticket.Amount</p>
                        <p class="card-text">Price: @ticket.Location.PriceToVisit.ToString("C")</p>
                        <p class="card-text">Total ticket price: $@(ticket.Amount * @ticket.Location.PriceToVisit)</p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("AddToTicketsList", "CartTicket", new { ticket.Location.LocationId })" class="btn btn-dark">Add more</a>
                        <a href="@Url.Action("RemoveFromTicketsList", "CartTicket", new { ticket.Location.LocationId })" class="btn btn-outline-dark">Remove</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <p class="mt-3">Total: @Model.TicketsListTotal.ToString("C")</p>

    <a asp-controller="CartTicket" asp-action="ClearTicketCart" class="btn btn-dark">Clear tickets</a>
    <a asp-controller="Order" asp-action="Checkout" class="btn btn-outline-dark">Checkout</a>
}
else
{
    <p>Your tickets list is empty, go to Locations to add any.</p>
}